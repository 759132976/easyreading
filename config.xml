<?xml version='1.0' encoding='utf-8'?>
<widget id="com.whu.suiyueyi" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>随阅易</name>
    <description>
        A sample Apache Cordova application。
    </description>
    <author email="984507810@qq.com" href="https://github.com/Hoofoo-WHU/easyreading">
        随阅易
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="FadeSplashScreenDuration" value="300" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <platform name="android">
        <allow-intent href="market:*" />
<!--         <preference name="SplashScreenDelay" value="0" />
        <preference name="FadeSplashScreenDuration" value="0" />
        <preference name="FadeSplashScreen" value="false"/> -->
        <preference name="StatusBarBackgroundColor" value="#00000000" />
        <!-- <splash src="static/screen/android/splash-port-ldpi.png" density="port-ldpi"/> -->
        <splash src="static/screen/android/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="static/screen/android/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="static/screen/android/splash-port-xhdpi.png" density="port-xhdpi"/>
        <splash src="static/screen/android/splash-port-xxhdpi.png" density="port-xxhdpi"/>
        <splash src="static/screen/android/splash-port-xxxhdpi.png" density="port-xxxhdpi"/>
        <!-- <icon density="ldpi" src="static/appIcon/android/ldpi.png" /> -->
        <icon density="mdpi" src="static/appIcon/android/mdpi.png" />
        <icon density="hdpi" src="static/appIcon/android/hdpi.png" />
        <icon density="xhdpi" src="static/appIcon/android/xhdpi.png" />
        <icon density="xxhdpi" src="static/appIcon/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="static/appIcon/android/xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <icon height="20" src="static/appIcon/ios/AppIcon-20@1x.png" width="20" />
        <icon height="40" src="static/appIcon/ios/AppIcon-20@2x.png" width="40" />
        <icon height="29" src="static/appIcon/ios/AppIcon-29@1x.png" width="29" />
        <icon height="57" src="static/appIcon/ios/AppIcon-57@1x.png" width="57" />
        <icon height="58" src="static/appIcon/ios/AppIcon-29@2x.png" width="58" />
        <icon height="80" src="static/appIcon/ios/AppIcon-40@2x.png" width="80" />
        <icon height="87" src="static/appIcon/ios/AppIcon-29@3x.png" width="87" />
        <icon height="114" src="static/appIcon/ios/AppIcon-57@2x.png" width="114" />
        <icon height="120" src="static/appIcon/ios/AppIcon-60@2x.png" width="120" />
        <icon height="180" src="static/appIcon/ios/AppIcon-60@3x.png" width="180" />
        <splash height="480" src="static/screen/ios/Default@1x~iphone.png" width="320" />
        <splash height="960" src="static/screen/ios/Default@2x~iphone.png" width="640" />
        <splash height="1136" src="static/screen/ios/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" src="static/screen/ios/Default-667h@2x~iphone.png" width="750" />
        <splash height="2208" src="static/screen/ios/Default-736h@3x~iphone.png" width="1242" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="StatusBarStyle" value="default" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.2" />
    <plugin name="cordova-plugin-light-statusbar" spec="https://github.com/michaelins/cordova-plugin-light-statusbar.git" />
    <plugin name="cordova.custom.plugins.exitapp" spec="~1.0.0" />
    <plugin name="cordova-plugin-app-version" spec="~0.1.9" />
    <plugin name="cordova-plugin-console" spec="~1.0.6" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.2" />
    <plugin name="it.innowatio.cordova.ios-fullscreen" spec="https://github.com/innowatio/cordova-ios-fullscreen.git" />
    <engine name="ios" spec="~4.3.1" />
</widget>
