<?xml version='1.0' encoding='utf-8'?>
<widget id="com.whu.suiyueyi" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>随阅易</name>
    <description>
        A sample Apache Cordova application。
    </description>
    <author email="984507810@qq.com" href="https://github.com/Hoofoo-WHU/easyreading">
        随阅易
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="FadeSplashScreenDuration" value="300"/>
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <!-- <preference name="Fullscreen" value="true"/> -->
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- <preference name="Fullscreen" value="true" /> -->
        <!-- <preference name="SplashScreenDelay" value="3000" /> -->
        <preference name="StatusBarBackgroundColor" value="#ffffffff" />
        <icon src="static/appIcon/android/ldpi.png" density="ldpi" />
        <icon src="static/appIcon/android/mdpi.png" density="mdpi" />
        <icon src="static/appIcon/android/hdpi.png" density="hdpi" />
        <icon src="static/appIcon/android/xhdpi.png" density="xhdpi" />
        <icon src="static/appIcon/android/xxhdpi.png" density="xxhdpi" />
        <icon src="static/appIcon/android/xxxhdpi.png" density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <icon src="static/appIcon/ios/AppIcon-20@1x.png" width="20" height="20" />
        <icon src="static/appIcon/ios/AppIcon-20@2x.png" width="40" height="40" />
        <icon src="static/appIcon/ios/AppIcon-29@1x.png" width="29" height="29" />
        <icon src="static/appIcon/ios/AppIcon-57@1x.png" width="57" height="57" />
        <icon src="static/appIcon/ios/AppIcon-29@2x.png" width="58" height="58" />
        <icon src="static/appIcon/ios/AppIcon-40@2x.png" width="80" height="80" />
        <icon src="static/appIcon/ios/AppIcon-29@3x.png" width="87" height="87" />
        <icon src="static/appIcon/ios/AppIcon-57@2x.png" width="114" height="114" />
        <icon src="static/appIcon/ios/AppIcon-60@2x.png" width="120" height="120" />
        <icon src="static/appIcon/ios/AppIcon-60@3x.png" width="180" height="180" />
        <splash src="static/screen/ios/Default@1x~iphone.png" width="320" height="480" />
        <splash src="static/screen/ios/Default@2x~iphone.png" width="640" height="960" />
        <splash src="static/screen/ios/Default-568h@2x~iphone.png" width="640" height="1136" />
        <splash src="static/screen/ios/Default-667h@2x~iphone.png" width="750" height="1334" />
        <splash src="static/screen/ios/Default-736h@3x~iphone.png" width="1242" height="2208" />
        <!-- <preference name="AutoHideSplashScreen" value="false"/> -->
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- <preference name="StatusBarBackgroundColor" value="#ffffffff" /> -->
        <preference name="StatusBarStyle" value="default" />
        <!-- <preference name="StatusBarOverlaysWebView" value="false" /> -->
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.2" />
    <plugin name="cordova-plugin-light-statusbar" spec="https://github.com/michaelins/cordova-plugin-light-statusbar.git" />
    <plugin name="cordova.custom.plugins.exitapp" spec="~1.0.0" />
    <plugin name="cordova-plugin-app-version" spec="~0.1.9" />
    <plugin name="cordova-plugin-console" spec="~1.0.6" />
    <engine name="ios" spec="~4.3.1" />
</widget>
